Screen:
    
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            id: welcome_label
            text: "Bienvenido"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
    
        MDTextField:
            background_color: 0, 1, 1, 1
            id: user
            hint_text: "Usuario"
            icon_right: "cuenta"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: password
            hint_text: "Contraseña"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True

        MDRoundFlatButton:
            text: "Iniciar Sesión"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.logger()

        MDButton:
            id: limpiar_label
            text: "Limpiar"
            font_size: 12
            halign: 'center'
            size_hint_x: None
            width: 100
            pos_hint: {"center_x": 0.5}
            #on_touch_down: app.recuperar()
        Widget:
            size_hint_y: None
            height: 10