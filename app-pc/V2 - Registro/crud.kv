Screen:
    
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 10
        orientation: 'vertical'

        MDLabel:
            id: welcome_label
            text: "CRUD"
            font_size: 40
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextField:
            id: usuario
            hint_text: "Usuario"
            icon_right: "cuenta"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: nombre
            hint_text: "Nombre"
            icon_right: "nombre"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: apellidos
            hint_text: "Apellidos"
            icon_right: "apellidos"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}

        MDTextField:
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            font_size: 18
            pos_hint: {"center_x": 0.5}
            password: True
		
        MDRoundFlatButton:
            text: "Consultar"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.consultar()

        MDRoundFlatButton:
            text: "Agregar"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.agregar()

        MDRoundFlatButton:
            text: "Modificar"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.modificar() 	

            
        MDRoundFlatButton:
            text: "Eliminar"
            font_size: 12
            pos_hint: {"center_x": 0.5}
            on_press: app.eliminar()	
